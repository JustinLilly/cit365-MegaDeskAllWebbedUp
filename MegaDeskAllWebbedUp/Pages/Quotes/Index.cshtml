@page
@model MegaDeskAllWebbedUp.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="spaceBetween">
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <form>
        Search Customer Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">@Html.DisplayNameFor(model => model.Quote[0].Name)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].DeskDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].NumberOfDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].SurfaceMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].RushDays)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">@Html.DisplayNameFor(model => model.Quote[0].DateAdded)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quote[0].QuotePrice)
            </th>
            <th>                                  </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Quote) {
        <tr>
            <td class="text-left">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeskDepth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDrawers)
            </td>
            <td class="text-left">
                @Html.DisplayFor(modelItem => item.SurfaceMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td class="text-left">
                $@Html.DisplayFor(modelItem => item.QuotePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
